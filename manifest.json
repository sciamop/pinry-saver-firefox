{
  "manifest_version": 2,
  "name": "Pinry Saver",
  "version": "1.0.1",
  "description": "Save web pages directly to your Pinry instance",
  
  "applications": {
    "gecko": {
      "id": "pinry-saver@pinry.local"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "https://*/*"
  ],
  
  "icons": {
    "16": "icons/pinry_saver_bitmap_icon.png",
    "32": "icons/pinry_saver_bitmap_icon.png",
    "48": "icons/pinry_saver_bitmap_icon.png",
    "128": "icons/pinry_saver_bitmap_icon.png"
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Pinry Saver",
    "default_icon": {
      "16": "icons/pinry_saver_bitmap_icon.png",
      "32": "icons/pinry_saver_bitmap_icon.png",
      "48": "icons/pinry_saver_bitmap_icon.png",
      "128": "icons/pinry_saver_bitmap_icon.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [
    "icons/*.png"
  ]
}
